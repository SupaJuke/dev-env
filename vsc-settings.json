{
  /* ===== Workbench Settings ===== */
  "workbench.colorTheme": "Gruvbox Material Dark",
  "workbench.iconTheme": "gruvbox-material-icon-theme",
  "workbench.tree.indent": 15,

  /* ===== Editor Settings ===== */
  "editor.fontFamily": "Cascadia Code, CaskaydiaCove NF",
  "editor.fontSize": 12.5,
  "editor.detectIndentation": true,
  "editor.insertSpaces": false,
  "editor.minimap.renderCharacters": false,
  "editor.formatOnSave": true,
  "editor.fontLigatures": true,
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.bracketPairColorization.enabled": false,

  /* ===== Terminal Settings ===== */
  "terminal.integrated.fontFamily": "CaskaydiaCove NF",
  "terminal.integrated.fontSize": 12.5,
  "terminal.integrated.defaultProfile.linux": "zsh",

  /* ===== Plugin-specific settings ===== */
  // Git
  "git.confirmSync": false,

  // Gruvbox Material
  "gruvboxMaterial.darkContrast": "hard",
  "gruvboxMaterial.darkSelection": "aqua",
  "gruvboxMaterial.italicComments": false,

  // Latex Workshop
  "latex-workshop.view.pdf.viewer": "tab",

  /* ===== Language Specific Settings ===== */
  // C & CPP
  "C_Cpp.default.cStandard": "gnu99",
  "C_Cpp.autocompleteAddParentheses": true,
  "C_Cpp.vcFormat.newLine.beforeOpenBrace.type": "sameLine",
  "C_Cpp.vcFormat.newLine.beforeOpenBrace.namespace": "sameLine",
  "C_Cpp.vcFormat.newLine.beforeOpenBrace.lambda": "sameLine",
  "C_Cpp.vcFormat.newLine.beforeOpenBrace.function": "sameLine",
  "C_Cpp.vcFormat.newLine.beforeOpenBrace.block": "sameLine",
  "C_Cpp.clang_format_style": "{ BasedOnStyle: Google, UseTab: Always, IndentWidth: 4, TabWidth: 4, ColumnLimit: 90}",

  // Golang
  "go.lintTool": "golangci-lint",
  "go.lintOnSave": "package",
  "go.liveErrors": {
    "enabled": false,
    "delay": 500
  },
  "go.formatTool": "goimports",

  // TypeScript React
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },

  // TypeScript
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },

  // JavaScript React
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },

  // jsonc, js, yaml
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
